<VirtualHost *>
  ServerAdmin tim@linfiniti.com 
  ServerName catalogue.localhost
  ServerAlias www.catalogue.localhost
  DocumentRoot /var/www
  CustomLog /var/log/apache2/catalogue.access.log combined
  # Possible values include: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel debug 
  #warn
  ErrorLog /var/log/apache2/catalogue.error.log
  ServerSignature Off
  WSGIScriptAlias / /home/web/sac/sac_catalogue/apache/django.wsgi
  WSGIDaemonProcess sac user=timlinux group=timlinux processes=1 threads=10 python-path=/home/web/sac/python/lib/python2.7/site-packages
  WSGIProcessGroup sac
  <Directory /home/web/sac/sac_catalogue/apache>
    Order deny,allow
    Allow from all
  </Directory>

  Alias /admin_media /home/web/sac/python/lib/python2.7/site-packages/django/contrib/admin/media/
  <Location /admin_media>
    Order deny,allow
    Allow from all
    SetHandler None
  </Location>

  Alias /media /home/web/sac/sac_catalogue/media
  <Location /media>
    Order deny,allow
    Allow from all
    SetHandler None
  </Location>
</VirtualHost>

