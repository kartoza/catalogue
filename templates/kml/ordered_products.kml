{% extends "kml/base.kml" %}
{% block records %}
{% for item in order.searchrecord_set.all %}
<Placemark>
    <name>Geometry for product {{ item.product.product_id }} </name>
    {% if transparentStyle %}
    <styleUrl>#transparentPolyStyle</styleUrl>
    {% endif %}
    <description>http://{{ external_site_url }}/showProduct/{{ item.product.product_id }}/</description>
    
    {{ item.product.spatial_coverage.kml|safe }}
</Placemark>
{% if myThumbsFlag %}
<GroundOverlay>
  <name>{{ item.product.product_id }}</name>
  <color>ffffff00</color>
  <drawOrder>1</drawOrder>
  <Icon>
    <href>/tmp/thumbs/tim.jpg</href>
    <refreshMode>onInterval</refreshMode>
    <refreshInterval>86400</refreshInterval>
    <viewBoundScale>0.75</viewBoundScale>
  </Icon>
  <LatLonBox>
    <north>{{ item.product.spatial_coverage.extent.ymax }}</north>
    <south>{{ item.product.spatial_coverage.extent.ymin }}</south>
    <east>{{ item.product.spatial_coverage.extent.xmax }}</east>
    <west>{{ item.product.spatial_coverage.extent.xmin }}</west>
    <rotation>0</rotation>
  </LatLonBox>
</GroundOverlay>
{% endif %}
{% endfor %}
{% endblock %}
